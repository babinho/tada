- model_class = Item
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%ul{id: "items"}
  - @items.each do |item|
    = content_tag_for :li, item do
      = link_to item.title, item

= link_to t('.new', :default => t("helpers.links.new")), new_item_path, :class => 'btn btn-primary'
